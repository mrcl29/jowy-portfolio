---
interface ModalProps {
  email: string;
}

const { email } = Astro.props as ModalProps;
---

<a
  href={`mailto:${email}`}
  class="flex items-center justify-center gap-2 text-xl font-medium text-gray-200 transition-transform duration-300 hover:scale-110 hover:text-white"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="24"
    height="24"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <rect width="20" height="16" x="2" y="4" rx="2"></rect><path
      d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
  </svg>

  <!-- {email} -->
</a>
