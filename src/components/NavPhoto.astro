---
import { Image } from "astro:assets";

interface NavPhotoProps {
  image: any;
  className?: string;
  altImage?: string;
}

const {
  image,
  className = "",
  altImage = "",
} = Astro.props as NavPhotoProps;
---

<div class="flex h-full items-end justify-center overflow-hidden">
  <Image
    src={image}
    alt={altImage}
    class={`pb-0 w-auto object-bottom ${className} grayscale transition-all duration-500 ease-in-out group-hover:scale-110 group-hover:grayscale-0`}
    loading="eager"
    fetchpriority="high"
    format="webp"
  />
</div>
